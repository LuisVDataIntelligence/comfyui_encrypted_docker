# Environment variables for ComfyUI Encrypted Docker

# RunPod Configuration
RP_ENDPOINT_ID=your_endpoint_id_here
RP_API_KEY=your_runpod_api_key_here
RP_RUNSYNC=true

# Encryption Keys (from gen_keys.py)
SERVER_PUBLIC_KEY_B64=your_server_public_key_here
WORKER_PRIVATE_KEY_B64=your_worker_private_key_here

# CivitAI Configuration
CIVITAI_TOKEN=your_civitai_api_token_here
# Alternative name also supported:
# CIVITAI_API_TOKEN=your_civitai_api_token_here

# Pod URL (when using Pod mode)
POD_URL=https://your-pod-id-8000.proxy.runpod.net

# Server Configuration (for container deployment)
LAUNCH_MODE=serverless
API_PORT=8000
COMFYUI_MODEL_DIR=/workspace/models
LOG_LEVEL=ERROR
LOG_SILENT=1
NO_HISTORY=0
ENCRYPTION_REQUIRED=1
DRY_RUN=0

# ComfyUI Configuration
DEVICE_MODE=auto
FORCE_CPU=0
COMFY_STARTUP_TIMEOUT=300
COMFY_AUTOSTART=1